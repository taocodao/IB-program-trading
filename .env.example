# IB Trailing Stop-Loss Manager Configuration
# Copy this file to .env and customize for your setup

# ============= IB CONNECTION =============
# TWS: port 7497 | IB Gateway: port 4002
IB_HOST=127.0.0.1
IB_PORT=7497
IB_CLIENT_ID=100

# ============= TRADING =============
# Trail percentage (0.10 = 10% below bid)
TRAIL_PERCENT=0.10

# Seconds between order updates (higher = fewer API calls)
MIN_UPDATE_INTERVAL=2

# ============= MODE =============
# ALWAYS test with paper trading first!
PAPER_TRADING=True

# ============= FILTERS (optional) =============
# Comma-separated symbols to include (empty = all)
ALLOWED_SYMBOLS=

# Comma-separated symbols to exclude
EXCLUDED_SYMBOLS=

# ============= SAFETY =============
MAX_POSITIONS=100
MIN_POSITION_QUANTITY=1

# ============= LOGGING =============
LOG_FILE=logs/trailing_stop.log
LOG_LEVEL=INFO
